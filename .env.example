# Streamlink MVP Environment Variables

# Copy this file to .env and fill in your values

# Common
NODE_ENV=development
APP_ENV=development

# Database (Postgres + pgvector)
DATABASE_URL=postgresql+psycopg://postgres:postgres@db:5432/streamlink
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=streamlink
POSTGRES_HOST=db
POSTGRES_PORT=5432
PGVECTOR_DIMS=1536

# Redis
REDIS_URL=redis://redis:6379/0

# Neo4j (Optional)
NEO4J_ENABLED=true
NEO4J_URI=bolt://neo4j:7687
NEO4J_PASSWORD=neo4j
NEO4J_DATABASE=neo4j

# Web / NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=changeme-in-production
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
API_BASE_URL=http://api:8000

# API
CORS_ORIGINS=http://localhost:3000,http://web:3000

# TMDB
TMDB_API_KEY=your-tmdb-api-key

# YouTube
YOUTUBE_API_KEY=your-youtube-api-key
YOUTUBE_OAUTH_CLIENT_ID=your-youtube-oauth-client-id
YOUTUBE_OAUTH_CLIENT_SECRET=your-youtube-oauth-client-secret
YOUTUBE_REDIRECT_URI=http://localhost:3000/api/auth/youtube/callback

# Embeddings
EMBEDDINGS_PROVIDER=openai
OPENAI_API_KEY=your-openai-api-key
OLLAMA_BASE_URL=http://host.docker.internal:11434

# Mock Mode (for testing without real API keys)
MOCK_MODE=false

# Encryption (for sensitive data)
ENCRYPTION_KEY=changeme-in-production-32-chars-long
