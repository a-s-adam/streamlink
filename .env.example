# Example environment configuration for the Personal Entertainment Knowledge Graph
# Copy this file to `.env` and replace the placeholder values with your own.

# Application URLs
BACKEND_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# Authentication
NEXTAUTH_SECRET=change_me

# Google OAuth (NextAuth)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# YouTube Data API (for metadata enrichment or direct API calls)
YOUTUBE_API_KEY=your_youtube_api_key

# YouTube OAuth (for ingesting liked videos/playlists)
YOUTUBE_OAUTH_CLIENT_ID=your_youtube_oauth_client_id
YOUTUBE_OAUTH_CLIENT_SECRET=your_youtube_oauth_client_secret
YOUTUBE_REDIRECT_URI=http://localhost:8000/api/youtube/callback

# TMDB API
TMDB_API_KEY=your_tmdb_api_key

# PostgreSQL / pgvector
POSTGRES_USER=pekg
POSTGRES_PASSWORD=pekg_pass
POSTGRES_DB=pekg
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql+psycopg2://pekg:pekg_pass@postgres:5432/pekg
PGVECTOR_DIMS=768

# Neo4j
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j_pass

# Redis
REDIS_URL=redis://redis:6379/0

# Encryption key for storing refresh tokens securely
ENCRYPTION_KEY=please_generate_a_random_secret

# Ollama (optional local LLM)
USE_OLLAMA=false
OLLAMA_BASE_URL=http://ollama:11434
